<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\commonWithDoc.props" />
  <PropertyGroup>
    <Title>TWCore</Title>
    <TargetFrameworks>net7.0;net6.0;net5.0;netcoreapp3.1;netcoreapp2.2;netcoreapp2.1;netstandard2.0;net472</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'net472'">
      <ItemGroup>
        <PackageReference Include="System.Threading.Channels" Version="4.5.0" />
        <PackageReference Include="System.Memory" Version="4.5.5" />
      </ItemGroup>
      <ItemGroup>
        <Reference Include="System.Web" />
        <Reference Include="System.Net.Http" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'netstandard2.0'">
      <ItemGroup>
        <PackageReference Include="System.Threading.Channels" Version="4.5.0" />
        <PackageReference Include="System.Memory" Version="4.5.5" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'netcoreapp2.1' Or '$(TargetFramework)' == 'netcoreapp2.2' Or '$(TargetFramework)' == 'netcoreapp3.1'">
      <ItemGroup>
        <PackageReference Include="System.Threading.Channels" Version="4.7.1" />
      </ItemGroup>
    </When>
  </Choose>
</Project>